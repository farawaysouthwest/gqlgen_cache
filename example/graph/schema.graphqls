# GraphQL schema example
#
# https://gqlgen.com/getting-started/

directive @cache(
  maxAge: Int
) on FIELD_DEFINITION

directive @hasRole(role: Role!) on FIELD_DEFINITION

enum Role {
  ADMIN
  USER
}

type Todo {
  id: ID!
  text: String! @cache(maxAge: 10)
  done: Boolean!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
