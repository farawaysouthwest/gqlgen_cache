# GraphQL schema example
#
# https://gqlgen.com/getting-started/

directive @cacheControl(
  maxAge: Int
) on FIELD_DEFINITION

type Todo {
  id: ID!
  text: String! @cacheControl(maxAge: 10)
  done: Boolean!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
